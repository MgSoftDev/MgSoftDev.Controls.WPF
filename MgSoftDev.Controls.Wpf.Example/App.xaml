<Application x:Class="MgSoftDev.Controls.Wpf.Example.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MgSoftDev.Controls.Wpf.Example"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
            <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Indigo" SecondaryColor="Orange" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            <ResourceDictionary
                Source="pack://application:,,,/MgSoftDev.Controls.WPF;component/Themes/Default.xaml" />

            <ResourceDictionary
                Source="pack://application:,,,/MgSoftDev.Controls.WPF.MaterialTheme;component/MaterialDesignTheme.xaml" />
        </ResourceDictionary.MergedDictionaries>
            
</ResourceDictionary>
      

    </Application.Resources>
</Application>
